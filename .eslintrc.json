{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "describe": false,
    "it": false,
    "before": false,
    "beforeEach": false,
    "after": false
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "parser": "babel-eslint",
    "no-unused-vars": "warn",
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}